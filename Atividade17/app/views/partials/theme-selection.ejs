<div id="theme-selection" class="w3-black w3-container w3-padding-64 w3-center">
    <h1 class="theme-selection__header w3-jumbo w3-margin-bottom w3-animate-opacity">
        Choose
    </h1>
    <div class="w3-row">
        <span class="w3-half w3-animate-left w3-padding-48" onclick="activateDarkMode()">
            <img class="w3-image theme-selection__icon" src="assets/icons/feather/moon.svg" alt="moon"/>
        </span>
        <span class="w3-half w3-animate-right w3-padding-48" onclick="activateLightMode()">
            <img class="w3-image theme-selection__icon" src="assets/icons/feather/sun.svg" alt="sun"/>
        </span>
    </div>
</div>
